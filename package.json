{
  "name": "branchlet",
  "version": "1.0.0",
  "description": "CLI for creating and managing Git worktrees",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "branchlet": "dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun run typecheck && bun build src/index.tsx --outdir dist --target node --format esm --external yoga-wasm-web",
    "start": "node dist/index.js",
    "test": "bun test tests/",
    "test:watch": "bun test tests/ --watch",
    "test:coverage": "bun test tests/ --coverage",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check --write src/",
    "typecheck": "tsc --noEmit",
    "generate:schema": "bun run scripts/generate-schema.ts",
    "validate:schema": "bun test tests/schemas/json-schema.test.ts",
    "ci": "bun run typecheck && bun run lint && bun run validate:schema && bun test && bun run build",
    "prepack": "bun run build"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "codegen",
    "claude",
    "ai",
    "codex"
  ],
  "author": {
    "name": "Raghav Pillai",
    "email": "me@raghav.sh",
    "url": "https://raghav.sh"
  },
  "license": "MIT",
  "files": [
    "dist/",
    "README.md",
    "schema.json"
  ],
  "dependencies": {
    "glob": "^13.0.6",
    "ink": "^6.2.2",
    "ink-spinner": "^5.0.0",
    "minimatch": "^10.2.2",
    "minimist": "^1.2.8",
    "react": "^19.1.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@testing-library/react": "^16.1.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "bun-types": "^1.2.0",
    "react-devtools-core": "^4.28.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
