{
  "name": "brancher",
  "version": "0.1.0",
  "description": "Interactive CLI for managing Git worktrees",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "brancher": "dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target node --format esm --external react-devtools-core",
    "start": "node dist/index.js",
    "test": "bun test",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write src/**/*.{ts,tsx}"
  },
  "keywords": ["git", "worktree", "cli", "interactive", "typescript"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ink": "^4.4.1",
    "react": "^18.2.0",
    "minimist": "^1.2.8",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/minimist": "^1.2.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}