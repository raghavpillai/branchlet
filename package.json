{
  "name": "brancher",
  "version": "0.0.1",
  "description": "CLI for creating and managing Git worktrees",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "brancher": "dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target node --format esm --external react-devtools-core",
    "start": "node dist/index.js",
    "test": "bun test",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check --write src/"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "codegen",
    "claude",
    "ai",
    "codex"
  ],
  "author": {
    "name": "Raghav Pillai",
    "email": "me@raghav.sh",
    "url": "https://raghav.sh"
  },
  "license": "MIT",
  "dependencies": {
    "ink": "^4.4.1",
    "react": "^18.2.0",
    "minimist": "^1.2.8",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.1",
    "ink-spinner": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/minimist": "^1.2.5",
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}